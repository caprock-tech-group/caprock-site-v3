---
import ms from "../assets/partners/microsoft-partner.png";
import dell from "../assets/partners/dell-partner.png";
import lorex from "../assets/partners/lorex.png";
import reolink from "../assets/partners/reolink.png";
import montavue from "../assets/partners/montavue.png";
import ninjaone from "../assets/partners/ninjaone.png";
import sentinelone from "../assets/partners/sentinelone.png";

const partners = [
  { name: "Microsoft", src: ms.src },
  { name: "Dell Technologies", src: dell.src },
  { name: "Lorex", src: lorex.src },
  { name: "Reolink", src: reolink.src },
  { name: "Montavue", src: montavue.src },
  { name: "NinjaOne", src: ninjaone.src },
  { name: "SentinelOne", src: sentinelone.src },
];
---

<div class="rounded-3xl border border-white/10 bg-ink/60 p-6">
  <div class="flex items-center justify-between gap-4">
    <h3 class="text-xs font-semibold tracking-widest text-fog/70">PARTNERS &amp; TOOLS</h3>
  </div>

  <div class="mt-4 grid grid-cols-2 gap-4 sm:grid-cols-4 lg:grid-cols-7 items-stretch">
    {partners.map((p) => (
      <div class="flex h-14 items-center justify-center rounded-xl border border-white/10 bg-white/5 px-4">
        <img
          src={p.src}
          alt={p.name}
          class="h-8 w-auto max-w-[140px] object-contain opacity-100"
          style="filter: drop-shadow(0 2px 10px rgba(0,0,0,.45));"
          loading="lazy"
          decoding="async"
        />
      </div>
    ))}
  </div>

  <p class="mt-4 text-xs text-fog/60">
    Logos are used only to indicate tools and vendor relationships Caprock works with. No client logos are shown.
  </p>
</div>
