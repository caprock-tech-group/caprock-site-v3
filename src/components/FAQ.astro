---
const { items = [] } = Astro.props;
---
<div class="card p-6">
  <h3 class="text-xl font-semibold tracking-tight">FAQ</h3>
  <div class="mt-4 grid gap-3">
    {items.map((item) => (
      <details class="rounded-2xl border border-white/10 bg-white/5 p-4">
        <summary class="cursor-pointer select-none text-sm font-semibold text-fog">
          {item.q}
        </summary>
        <div class="mt-3 text-sm text-fog/75 leading-relaxed">
          {item.a}
        </div>
      </details>
    ))}
  </div>
</div>
