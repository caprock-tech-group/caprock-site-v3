---
const { title = "Request a callback", description = "Tell us what you’re protecting. We’ll respond with next steps and a clear plan.", interestDefault = "Managed IT" } = Astro.props;
---
<div class="card p-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="text-xl font-semibold tracking-tight">{title}</h3>
      <p class="mt-2 text-sm text-fog/70">{description}</p>
    </div>
    <span class="badge">Short form</span>
  </div>

  <form name="lead" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="mt-6 grid gap-4">
    <input type="hidden" name="form-name" value="lead" />
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field" />
      </label>
    </p>

    <div class="grid gap-4 md:grid-cols-2">
      <div>
        <label for="name">Name</label>
        <input id="name" name="name" autocomplete="name" required />
      </div>
      <div>
        <label for="company">Company</label>
        <input id="company" name="company" autocomplete="organization" />
      </div>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      <div>
        <label for="email">Email</label>
        <input id="email" name="email" type="email" autocomplete="email" required />
      </div>
      <div>
        <label for="phone">Phone</label>
        <input id="phone" name="phone" type="tel" autocomplete="tel" />
      </div>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      <div>
        <label for="city">City</label>
        <input id="city" name="city" autocomplete="address-level2" />
      </div>
      <div>
        <label for="interest">Service interest</label>
        <select id="interest" name="interest">
          <option selected={interestDefault === "Managed IT"}>Managed IT</option>
          <option selected={interestDefault === "MSP Pricing"}>MSP Pricing</option>
          <option selected={interestDefault === "Solar Sentry"}>Solar Sentry</option>
          <option selected={interestDefault === "Solar Plans"}>Solar Plans</option>
          <option selected={interestDefault === "Other"}>Other</option>
        </select>
      </div>
    </div>

    <div>
      <label for="message">Notes</label>
      <textarea id="message" name="message" rows="4" placeholder="What are you trying to secure? Any deadlines?"></textarea>
    </div>

    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <button class="btn btn-primary" type="submit">Send</button>
      <p class="text-xs text-fog/60">
        By submitting, you agree we can contact you about your request. No spam.
      </p>
    </div>
  </form>
</div>
